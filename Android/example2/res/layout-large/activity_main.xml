<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/connstatus"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize"
        android:text="@string/idle"
        android:layout_gravity="center_horizontal" />
    <ImageButton
        android:id="@+id/ib_doubleforward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_doubleforward"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal"
    >
    	<ImageButton
        	android:id="@+id/ib_leftforward"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/arrow_forward"
        	android:layout_gravity="center_vertical" />
		<hu.uw.pallergabor.motorboat.BoatSurface    
        	android:id="@+id/boatsurface"
    		android:layout_width="230dp"
    		android:layout_height="640dp"
			android:background="@drawable/motorboat"    	
    	/>
    	
    	<ImageButton
        	android:id="@+id/ib_rightforward"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/arrow_forward"
        	android:layout_gravity="center_vertical" />
    	
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
